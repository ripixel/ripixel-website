{
  "name": "ripixel",
  "version": "1.0.0",
  "description": "I'm James King, and I make things for the web",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npm run build:prepare && npm run build:css && npm run build:favicons && npm run build:pages",
    "build:prepare": "mkdir -p public",
    "build:pages": "npm run build:prepare && ts-node ./scripts/generatePages",
    "build:css": "npm run build:prepare && cleancss -o ./public/styles.min.css ./assets/*.css",
    "build:favicons": "npm run build:prepare && favicons-generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ripixelcodes/ripixel-website.git"
  },
  "author": "James King <ripixel@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ripixelcodes/ripixel-website/issues"
  },
  "homepage": "https://github.com/ripixelcodes/ripixel-website#readme",
  "devDependencies": {
    "@types/node": "^13.13.5",
    "clean-css-cli": "^4.3.0",
    "favicons-generate": "0.0.15",
    "firebase-tools": "^8.2.0",
    "nodemon": "^2.0.3",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
