        "husky": "^8.0.0",
        "listr": "^0.14.3",
        "listr2": "^8.3.2",
        "node-fetch": "^3.3.0",
        "nodemon": "^3.0.0",
        "prettier": "^3.0.0",
        "pretty-quick": "^4.0.0",
        "serve": "^14.0.0",
        "showdown": "^2.0.0",
        "showdown-highlight": "^3.0.0",
        "standard-version": "^9.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.0",
        "uninstall": "0.0.0",
