    "engines": {
        "node": "^22"
    },
    "homepage": "https://github.com/ripixel/ripixel-website#readme",
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/prettier": "^3.0.0",
        "@types/showdown": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "clean-css-cli": "^5.0.0",
        "date-fns": "^2.13.0",
        "enquirer": "^2.3.6",
        "eslint": "^9.0.0",
