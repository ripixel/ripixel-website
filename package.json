{
    "name": "ripixel",
    "version": "8.0.7",
    "description": "I'm James King, and I make things for the web",
    "scripts": {
        "dev": "npm run dev:personal",
        "dev:personal": "SKIER_SITE=personal skier --debug",
        "dev:corporate": "SKIER_SITE=corporate skier --debug",
        "build": "npm run build:corporate && npm run build:personal",
        "build:corporate": "SKIER_SITE=corporate skier",
        "build:personal": "SKIER_SITE=personal skier",
        "build:dev": "SKIER_SITE=personal skier --debug",
        "serve": "serve public/",
        "serve:personal": "serve public/personal/",
        "serve:corporate": "serve public/corporate/",
        "start:personal": "npm run build:personal && npm run serve:personal",
        "start:corporate": "npm run build:corporate && npm run serve:corporate",
        "release": "standard-version -m 'chore(release): %s [skip ci]'",
        "release:ci": "npm run release && git push --follow-tags origin master --no-verify"
    },
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ripixel/ripixel-website.git"
    },
    "author": "James King <ripixel@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ripixel/ripixel-website/issues"
    },
    "engines": {
        "node": "^24"
    },
    "homepage": "https://github.com/ripixel/ripixel-website#readme",
    "devDependencies": {
        "firebase-tools": "^15.0.0",
        "nodemon": "^3.0.0",
        "skier": "^3.0.1",
        "standard-version": "^9.0.0"
    }
}
